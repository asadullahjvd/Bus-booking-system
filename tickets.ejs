<!DOCTYPE html>
<html>
<head>
  <title>Tickets</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 p-6">
  <h1 class="text-3xl font-bold mb-6 text-center text-blue-800">üéüÔ∏è Your Tickets</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <% bookings.forEach(function(booking) { %>
      <% booking.seats.forEach(function(seat) { %>
        <div class="bg-white p-4 rounded shadow flex justify-between items-start">
          <div>
            <p><strong>From:</strong> <%= booking.from %></p>
            <p><strong>To:</strong> <%= booking.to %></p>
            <p><strong>Date:</strong> <%= new Date(booking.date).toDateString() %></p>
            <p><strong>Seat:</strong> <%= seat %></p>
            <p><strong>Distance:</strong> <%= booking.distance %> km</p>
            <p><strong>Fare:</strong> Rs. <%= booking.fare / booking.total_seats %></p>
            <button onclick="cancelSeat('<%= booking._id %>', '<%= seat %>')" 
                    class="bg-red-500 text-white px-2 py-1 mt-2 rounded">
              Cancel Seat
            </button>
          </div>
          <img src="/images/asad.png" class="w-48 rounded shadow border" />
        </div>
      <% }); %>
    <% }); %>
  </div>

  <!-- Raast ID Section -->
  <div class="text-center mt-10">
    <h3 class="text-lg text-green-700 font-semibold">
      üí∞ Pay via JazzCash (Raast ID):
      <a href="javascript:void(0)" onclick="copyRaastId()" class="underline hover:text-green-900">
        03304619423
      </a>
    </h3>
    <p id="copy-message" class="text-sm text-gray-500 mt-1 hidden">‚úÖ Raast ID copied to clipboard!</p>
  </div>

  <script>
  function copyRaastId() {
    navigator.clipboard.writeText("03304619423").then(() => {
      document.getElementById("copy-message").classList.remove("hidden");
      setTimeout(() => {
        document.getElementById("copy-message").classList.add("hidden");
      }, 2000);
    });
  }

  async function cancelSeat(bookingId, seat) {
    if (confirm("Are you sure you want to cancel this seat?")) {
      try {
        const res = await fetch(`/api/cancel-seat/${bookingId}/${seat}`, { method: 'DELETE' });
        const data = await res.json();

        alert(data.message || "Cancelled");

        if (data.bookings) {
          renderTickets(data.bookings); // üîπ Update tickets without reload
        }
      } catch (err) {
        alert("Error cancelling seat");
        console.error(err);
      }
    }
  }

  function renderTickets(bookings) {
    const container = document.querySelector(".grid");
    container.innerHTML = ""; // Clear current tickets

    bookings.forEach(booking => {
      booking.seats.forEach(seat => {
        container.innerHTML += `
          <div class="bg-white p-4 rounded shadow flex justify-between items-start">
            <div>
              <p><strong>From:</strong> ${booking.from}</p>
              <p><strong>To:</strong> ${booking.to}</p>
              <p><strong>Date:</strong> ${new Date(booking.date).toDateString()}</p>
              <p><strong>Seat:</strong> ${seat}</p>
              <p><strong>Distance:</strong> ${booking.distance} km</p>
              <p><strong>Fare:</strong> Rs. ${booking.fare / booking.total_seats}</p>
              <button onclick="cancelSeat('${booking._id}', '${seat}')" 
                      class="bg-red-500 text-white px-2 py-1 mt-2 rounded">
                Cancel Seat
              </button>
            </div>
            <img src="/images/asad.png" class="w-48 rounded shadow border" />
          </div>
        `;
      });
    });
  }
</script>

</body>
</html>
